<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Botón flotante para expandir o contraer la leyenda -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_menu"
        android:backgroundTint="@color/orange"
        android:contentDescription="Toggle Legend" />

    <!-- Contenedor de la leyenda (CardView) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/legendCardView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="72dp"
        android:padding="16dp"
        android:visibility="gone"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Elementos de la leyenda (cambia según lo que necesites) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elemento 1"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_marker1"
                android:drawablePadding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elemento 2"
                android:textColor="@android:color/white"
                android:drawableStart="@drawable/ic_marker2"
                android:drawablePadding="8dp"/>

            <!-- Agrega más elementos de leyenda según sea necesario -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>