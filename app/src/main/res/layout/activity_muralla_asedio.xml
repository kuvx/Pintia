<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabecera personalizada -->
    <com.example.pintia.components.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <!-- Contenedor principal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="90dp">

        <!-- Imagen de fondo -->
        <ImageView
            android:id="@+id/quintana_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/muralla"
            android:src="@drawable/fondo_defensa" />

        <!-- Botón de información en la esquina superior derecha -->
        <ImageButton
            android:id="@+id/info_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/round_button_background"
            android:src="@drawable/info"
            android:contentDescription="@string/description" />
        <!-- Overlay informativo (invisible inicialmente) -->
        <FrameLayout
            android:id="@+id/info_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_translucent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Mensaje informativo -->
                <TextView
                    android:id="@+id/info_overlay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/example_test"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="16dp" />

                <!-- Imagen debajo del mensaje -->
                <ImageView
                    android:id="@+id/info_overlay_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/muralla"
                    android:contentDescription="Imagen informativa" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <!-- Footer personalizado -->
    <com.example.pintia.components.Footer
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
